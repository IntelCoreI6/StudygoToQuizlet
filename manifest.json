{
  "manifest_version": 3,
  "name": "StudyGo Flashcard Exporter",
  "version": "1.0",
  "description": "Extracts flashcards from a StudyGo page and allows editing/exporting to CSV.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.studygo.com/nl/learn/lists/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["editor.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
